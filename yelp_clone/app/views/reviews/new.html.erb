<div class="form-wrapper">
  <%= form_for [@restaurant, @review] do |f| %>
    <div class="text-box"><%= f.label :comment %></div>
    <div class="text-box"><%= f.text_area :comment %></div>
    <div class="text-box"><%= f.label :rating %><br>
    <%= f.select :rating, (1..5) %></div>
    <div class="text-box"><%= f.submit 'Submit Review' %></div>
  <% end %>
</div>
